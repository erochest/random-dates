name:                random-dates
version:             0.1.0.0
synopsis:            Generate random data
-- description:         
license:             Apache-2.0
license-file:        LICENSE
author:              Eric Rochester
maintainer:          erochest@virginia.edu
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     RandomDates.Random
                     , RandomDates.Types
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , mwc-random
                     , lens
                     , thyme
                     , old-locale
                     , conduit
                     , csv-conduit
                     , containers
                     , bytestring
                     , text
  hs-source-dirs:      src
  default-language:    Haskell2010

executable random-dates
  main-is:             Main.hs
  other-modules:       Opts
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , random-dates
                     , text
                     , optparse-applicative
                     , thyme
                     , old-locale
  -- hs-source-dirs:      .
  default-language:    Haskell2010


test-suite random-dates-specs
  type:                exitcode-stdio-1.0
  ghc-options:         -threaded -rtsopts
  hs-source-dirs:      specs
  main-is:             Specs.hs
  build-depends:         base       == 4.7.*
                       , QuickCheck
                       , smallcheck
                       , hspec
                       -- , tasty
                       -- , tasty-quickcheck
                       -- , tasty-smallcheck
  default-language:    Haskell2010
